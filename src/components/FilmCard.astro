---
const image = Astro.props.image;
const stars = Astro.props.stars;
const alt = Astro.props.alt;
const id = Astro.props.id;
//id de la movie sirve para pagination dynamic
const notImage =
  "https://static.displate.com/857x1200/displate/2022-04-15/7422bfe15b3ea7b5933dffd896e9c7f9_46003a1b7353dc7b5a02949bd074432a.jpg";
---

<div
  class="w-40 px-2 max-w-sm bg-white rounded-lg hover:shadow-lg hover:transition duration-500 hover:scale-105 dark:bg-gray-800 flex flex-col"
>
  <div class="relative w-fit">
    <a class="flex justify-center w-32" href={"/movie/" + id} id="movie-link">
      <img
        class="m-4 rounded-md"
        src={image === "https://image.tmdb.org/t/p/w300null" ? notImage : image}
        alt={alt}
        loading="lazy"
      />
    </a>
    <button
      class="absolute right-1 top-5 text-gray-400 w-8 h-8 bg-gray-700 rounded-full inline-flex justify-center items-center"
      id={id}
    >
      <svg
        class="w-5 h-5 hover:text-yellow-300 icon flat-line"
        viewBox="0 0 24 24"
        data-name="Flat Line"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="m12 17-7 4V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v17Z"
          style="fill:transparent;stroke-width:2"></path><path
          d="m12 17-7 4V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v17Z"
          style="fill:currentcolor;stroke-linecap:round;stroke-linejoin:round;stroke-width:2"
        ></path></svg
      >
    </button>
  </div>
  <div class="w-34">
    <div class="flex flex-wrap gap-2 mb-5">
      <h5
        class="text-sm font-semibold tracking-tight text-gray-900 dark:text-white"
      >
        {alt}
      </h5>
      <div class="flex">
        <svg
          aria-hidden="true"
          class="w-5 h-5 text-yellow-300"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><title>First star</title><path
            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
          ></path></svg
        >
        <span
          class="text-blue-800 text-xs font-semibold rounded dark:text-white"
          >{stars}</span
        >
      </div>
    </div>
  </div>
</div>

<style>
  /* para que se active el Lazy Load en las categories/search */
  img {
    min-height: 200px;
  }
</style>

