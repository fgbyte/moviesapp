---
import Genero from "./Genero.astro";
const image = Astro.props.image
const alt = Astro.props.alt
const stars = Astro.props.stars
import {getCategoriesPreview} from '../api/main.js'

const genero = 'test'
// const duration = Astro.props.duration
---

<div
  class="w-100 px-2 max-w-md bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-row gap-0 items-center"
>
  <img class="m-4 rounded-md w-20" src={image} alt={alt} />
  <div class="">
    <div class="flex flex-col flex-start py-2">
      <a href="#">
        <h5
          class="text-sm font-semibold tracking-tight text-gray-900 dark:text-white"
        >
          {alt}
        </h5>
      </a>
      <div class="flex items-center mt-2.5 mb-5">
        <svg
          aria-hidden="true"
          class="w-5 h-5 text-yellow-300"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><title>First star</title><path
            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
          ></path></svg
        >
        <span
          class=" text-blue-800 text-xs font-semibold rounded dark:text-white"
          >{stars}</span
        >
      </div>
      <div class="flex flex-row gap-2 flex-wrap">
       <Genero genero={genero}/>
      </div>

