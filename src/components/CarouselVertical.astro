---
import HorizontalCard from "./HorizontalCard.astro";

import { getPopularMovies } from "../api/main.js"
const movies = await getPopularMovies()
const imagesURL = 'https://image.tmdb.org/t/p/w300'

---

<div class="flex flex-col w-full gap-2 overflow-y-scroll pb-20 md:flex-row md:overflow-x-scroll md:h-auto">
    {
        movies.map((movie)=> {
            return (
                <HorizontalCard image={imagesURL + movie.poster_path} alt={movie.title} stars={movie.vote_average}/>
            )
        })
    }
</div>